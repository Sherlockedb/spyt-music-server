# API 配置
API_V1_STR=/api/v1
PROJECT_NAME=spyt-music-server
HOST='0.0.0.0'
PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# 安全配置
SECRET_KEY=your-secret-key-here  # 在生产环境中使用强随机密钥
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MongoDB 配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=spyt_music

# Spotify API 配置
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# 文件存储配置
MUSIC_LIBRARY_PATH=/path/to/music_library
TEMP_DOWNLOAD_PATH=/path/to/temp_downloads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/spyt-music-server.log

# 工作进程配置
WORKER_CONCURRENCY=2
WORKER_POLL_INTERVAL=5
